<table class="ui red table">
  <thead>
    <tr>
      <th>药品名称</th>
      <th>主治功效</th>
      <th>剩余数量</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= link_to item.name, edit_item_path(item) %></td>
      <td><%= item.intro %></td>
      <td><%= item.num %></td>
      <td><%= link_to '删除', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Item', new_item_path %>
