<% title t(:'title.items') %>

<% if not @items.empty? %>
  <% @items.each do |item| %>
    <div class="fluid ui pink card">
      <div class="content">
        <div class="right floated">
          <i class="pink lab icon"></i>
          <%= item.num %>
        </div>
        <div class="header">
          <%= item.name %>
        </div>
      </div>
      <div class="extra content">
        <div class="fluid ui large buttons">
          <%= link_to '编辑', edit_item_path(item), class: 'ui pink button' %>
          <div class="or"></div>
          <%= link_to '删除', item, method: :delete, class: 'ui button', data: { confirm: '确认删除？' } %>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="ui center aligned pink segment">
    <p>你还未添加任何药品</p>
    <%= link_to '立即添加', new_item_path,
    class: 'fluid ui pink button' %>
  </div>
<% end %>
