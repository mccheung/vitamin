<% title @item.name %>
<div class="fluid ui pink card">
  <div class="content">
    <a class="header"><%= @item.name %></a>
    <div class="description">
      <%= @item.intro %>
    </div>
  </div>
  <div class="extra content">
    <span class="right floated">
      <%= @item.created_at %>
    </span>
    <span>
      <i class="lab icon"></i>
      <%= @item.num %>
    </span>
  </div>
  <%= link_to '编辑', edit_item_path(@item),
  class: 'ui bottom attached button' %>
</div>
