<% title t(:'title.search_results') %>

<% if @results.empty? %>
  <div class="ui center aligned pink segment">
    <p>没有找到此种药品</p>
  </div>
<% else %>
  <%= render "jssdk" %>
  <div class="ui two item pointing menu">
    <%= link_to search_path(sort_by: "distance"), class: "item active" do %>
      离我最近
    <% end %>
    <%= link_to search_path(sort_by: "num"), class: "item" do %>
      数量最多
    <% end %>
  </div>
  <%= render partial: "result", collection: @results, as: :r %>
  <script>
   $('.address').each(function() {
     $(this).bind('click', function() {
       var location = $(this).data('location');
       var address = $(this).data('address');
       var owner = $(this).data('owner');
       wx.openLocation({
         latitude: location[1],
         longitude: location[0],
         name: address, // 位置名
         address: owner, // 地址详情说明
         scale: 15, // 地图缩放级别,整形值,范围从1~28。默认为最大
         infoUrl: '' // 在查看位置界面底部显示的超链接,可点击跳转
       });
       return false;
     });
   })
  </script>
<% end %>
