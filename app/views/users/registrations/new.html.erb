<% title t(:'title.bind_account') %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'ui form warning'}) do |f| %>
  <div class="ui pink segment">
    <div class="ui top left attached pink label">
      <%= t(:'title.bind_account') %>
    </div>

    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, autofocus: true %>
    </div>

    <%= f.submit("提交", :class => 'fluid pink ui button') %>
  </div>
<% end %>
